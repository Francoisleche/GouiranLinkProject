<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/section1_bg"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="Donner votre avis"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@color/GouiranLightPink"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avis ou Problème"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/description_tellus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="6"
                android:padding="15dp"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/erreur_selfie_tellus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#d16677"
                android:clickable="true"
                android:padding="5dp"
                android:text="Capture d'écran"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/imgView_tellus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="5px"
                android:background="#FF909090" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information sur l'appareil :"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nom_smartphone_tellus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modèle de l'appareil" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/constructeur_smartphone_tellus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modèle de l'appareil" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/modele_smartphone_tellus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Modèle de l'appareil" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/version_smartphone_tellus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Version du Modèle" />

            </LinearLayout>

            <View
                android:layout_width="500dp"
                android:layout_height="5px"
                android:background="#FF909090" />


            <Button
                android:id="@+id/envoi_mail_erreur_tellus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#d16677"
                android:clickable="true"
                android:padding="5dp"
                android:text="Valider"
                android:textColor="@color/white" />


        </LinearLayout>

        </ScrollView>
</LinearLayout>