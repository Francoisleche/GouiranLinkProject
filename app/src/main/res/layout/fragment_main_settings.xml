<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/frameLayout"
    android:background="@drawable/section1_bg"
    tools:context="com.example.franois.gouiranlinkproject.Account.MainSettings">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/frame_layout"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Compte"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center"
                    android:background="@color/GouiranLightPink"
                    android:textSize="25sp"/>
                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:id="@+id/edit_profile"
                    android:background="@drawable/ic_border_color_black_24dp"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5px"
                android:background="#FF909090" />

            <TextView
                android:textColor="@color/black"
                android:id="@+id/identifiantcustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/smartphoneversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"

                android:layout_marginTop="15dp"/>


            <View
                android:layout_width="fill_parent"
                android:layout_height="5px"
                android:background="#FF909090"
                android:layout_marginTop="50dp" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/settings_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:text="ParamÃ¨tres" />
                <Button
                    android:id="@+id/settings_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="0"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/ic_tune_black_24dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5px"
                android:background="#FF909090" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:text="A propos" />

                <Button
                    android:id="@+id/about"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="0"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/ic_phone_android_black_24dp"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5px"
                android:background="#FF909090" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:layout_marginStart="20dp"
                    android:text="Donner votre avis" />

                <Button
                    android:id="@+id/tell_us"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="0"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:background="@drawable/ic_thumb_up_black_24dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5px"
                android:background="#FF909090" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:layout_marginStart="20dp"
                    android:text="Inviter des amis" />

                <Button
                    android:id="@+id/invite_friends"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_weight="0"
                    android:background="@drawable/ic_group_black_24dp"
                    android:clickable="true"
                    android:layout_marginEnd="20dp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5px"
                android:background="#FF909090" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>

