<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/section1_bg"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:text="Donner votre avis"
        android:gravity="center"
        android:textSize="25sp"
        android:background="@color/GouiranLightPink"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avis ou Problème"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/avis_tellus"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="6"
        android:gravity="top|left"
        android:padding="15dp"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"/>

    <TextView
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/description_tellus"
        android:inputType="textMultiLine"
        android:lines="8"
        android:minLines="6"
        android:padding="15dp"
        android:gravity="top|left"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back"/>

    <Button
        android:layout_gravity="center"
        android:id="@+id/erreur_selfie_tellus"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#d16677"
        android:textColor="@color/white"
        android:padding="5dp"
        android:text="Capture d'écran" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgView_tellus"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="#FF909090" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Information sur l'appareil :"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nom_smartphone_tellus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modèle de l'appareil"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/constructeur_smartphone_tellus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modèle de l'appareil"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/modele_smartphone_tellus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modèle de l'appareil"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/version_smartphone_tellus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version du Modèle"/>

    </LinearLayout>

    <View
        android:layout_width="500dp"
        android:layout_height="5px"
        android:background="#FF909090" />


    <Button
        android:layout_gravity="center"
        android:id="@+id/envoi_mail_erreur_tellus"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#d16677"
        android:textColor="@color/white"
        android:padding="5dp"
        android:text="Valider" />


</LinearLayout>

    </ScrollView>
    </LinearLayout>