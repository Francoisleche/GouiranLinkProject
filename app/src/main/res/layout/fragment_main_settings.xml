<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/frameLayout"
    android:background="@drawable/section1_bg"
    tools:context="com.gouiranlink.franois.gouiranlinkproject.Account.MainSettings">

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/frame_layout"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/compte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Mon compte"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="3"
                    android:layout_height="?attr/actionBarSize"
                    android:gravity="center"
                    android:background="@color/GouiranLightPink"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="5px"
                android:background="#FF909090" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_marginStart="36dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/image_inconnu"
                    app:civ_border_width="5dp"
                    app:civ_border_color="#d16677"/>

                <Button
                    android:layout_gravity="bottom"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:id="@+id/edit_profile"
                    android:background="@drawable/ic_crayon"/>
                    <!--android:background="@drawable/ic_border_color_black_24dp"/>-->

            </LinearLayout>


            <TextView
                android:textColor="@color/black"
                android:id="@+id/identifiantcustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:textColor="@color/black"
                android:id="@+id/smartphoneversion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"

                android:layout_marginTop="15dp"/>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/settings_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_weight="3"
                            android:clickable="true"
                            android:text="ConfidentialitÃ©"
                            android:layout_gravity="center"/>
                        <Button
                            android:layout_marginTop="10dp"
                            android:id="@+id/confidential_button"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="0"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:background="@drawable/ic_confidential"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                    <View
                        android:layout_width="5px"
                        android:layout_height="fill_parent"
                        android:background="#FF909090" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_weight="3"
                            android:text="Donner mon avis"
                            android:layout_gravity="center"/>

                        <Button
                            android:layout_marginTop="10dp"
                            android:id="@+id/tell_us"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="0"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:background="@drawable/ic_thumb_up_black_24dp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5px"
                    android:background="#FF909090" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_weight="3"
                            android:text="FAQ"
                            android:layout_gravity="center"/>

                        <Button
                            android:layout_marginTop="10dp"
                            android:id="@+id/faq"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="0"
                            android:background="@drawable/ic_faq"
                            android:clickable="true"
                            android:layout_gravity="center"/>

                    </LinearLayout>



                    <View
                        android:layout_width="5px"
                        android:layout_height="fill_parent"
                        android:background="#FF909090" />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_weight="3"
                            android:text="A propos"
                            android:layout_gravity="center"/>

                        <Button
                            android:layout_marginTop="10dp"
                            android:id="@+id/about"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_weight="0"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:background="@drawable/ic_phone_android_black_24dp"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>




        </LinearLayout>
    </FrameLayout>
</FrameLayout>

