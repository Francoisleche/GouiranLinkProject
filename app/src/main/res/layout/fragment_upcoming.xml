<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.franois.gouiranlinkproject.UpcomingFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/upcomingFragment">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upcoming_provider_name_1"
                android:gravity="start"
                android:layout_gravity="start"
                android:layout_weight="0.5"
                android:id="@+id/upcoming_provider_name_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upcoming_service_name_1"
                android:layout_weight="0.5"
                android:gravity="end"
                android:layout_gravity="end"
                android:id="@+id/upcoming_service_name_1"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:id="@+id/er6n"
                android:layout_marginTop="5dp"
                android:src="@drawable/er6n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upcoming_day_1"
                android:layout_marginTop="10dp"
                android:id="@+id/day_1"
                android:layout_toEndOf="@id/er6n"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upcoming_hour_1"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/er6n"
                android:layout_below="@id/day_1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upcoming_provider_name_2"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:id="@+id/upcoming_provider_name_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="upcoming_service_name_2"
                android:layout_gravity="center"
                android:layout_alignParentEnd="true"
                android:id="@+id/upcoming_service_name_2"/>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
